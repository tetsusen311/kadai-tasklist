<h1>あなたのタスク一覧</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.id, task %> >> <br>
        task:<%= task.content %><br>
        status:<%= task.status %><br>
    </li>
  <% end %>
</ul>

<%= link_to 'タスクの作成', new_task_path %>
